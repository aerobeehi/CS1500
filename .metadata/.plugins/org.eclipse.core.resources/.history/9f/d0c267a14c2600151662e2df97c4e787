	cin >> userName;

	cout << "\n" << PASSWORD_MSG;
	cin >> firstPassword;

	cout << VERIFY_PASSWORD;
	cin >> secondPassword;

	passwordMatch passwordOne
	== passwordTwo ? passwordMatch = 1: passwordMatch = 0;

	passwordMatch = verifyPassword(firstPassword, secondPassword);
